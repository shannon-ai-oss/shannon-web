{
  "name": "pureshannon",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run build:client && npm run build:ssr && npm run build:data && npm run build:copy",
    "build:client": "vite build",
    "build:ssr": "VITE_SSR_BUILD_TARGET=app VITE_SSR_ENTRY=src/entry-server.jsx vite build --ssr src/entry-server.jsx",
    "build:data": "VITE_SSR_BUILD_TARGET=data VITE_SSR_ENTRY=src/ssr/dataLoader.js vite build --ssr src/ssr/dataLoader.js",
    "build:copy": "node scripts/copy-dist.js",
    "preview": "vite preview --host",
    "test": "vitest --run",
    "memory:server": "node backend/memory-server.cjs"
  },
