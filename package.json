    "echarts-for-react": "^3.0.5",
    "framer-motion": "^12.23.24",
    "fuse.js": "^7.1.0",
    "katex": "^0.16.23",
    "lucide-react": "^0.554.0",
    "mermaid": "^11.12.0",
    "prism-react-renderer": "^2.4.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-markdown": "^10.1.0",
    "react-quill": "^2.0.0",
